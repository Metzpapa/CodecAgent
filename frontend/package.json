{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "// --- PROCESS MANAGEMENT SCRIPTS ---": "",
    "dev:ui": "vite",
    "dev:api": "cd .. && ../.venv/bin/uvicorn codec.backend.main:app --reload",
    "dev:worker": "cd .. && ../.venv/bin/celery -A codec.backend.tasks worker --loglevel=info",
    "dev:all": "concurrently \"npm:dev:ui\" \"npm:dev:api\" \"npm:dev:worker\""
  },
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "vite": "^5.3.1"
  }
}
